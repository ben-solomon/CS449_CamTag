<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="theappsnamegoeshere.apptest.testapp.camtag.editTags"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="551dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/assignedTags"
            android:layout_alignStart="@+id/assignedTags"
            android:layout_centerVertical="true"
            android:text="Available Tags"
            tools:layout_editor_absoluteX="7dp"
            tools:layout_editor_absoluteY="267dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="13dp"
            android:layout_marginStart="13dp"
            android:layout_marginTop="14dp"
            android:text="Assigned Tags"
            tools:layout_editor_absoluteX="7dp"
            tools:layout_editor_absoluteY="28dp" />

        <Button
            android:id="@+id/updateButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="SAVE"
            android:textColor="@color/colorAccent"
            tools:layout_editor_absoluteX="160dp"
            tools:layout_editor_absoluteY="503dp" />

        <GridView
            android:id="@+id/tagsPool"
            android:layout_width="340dp"
            android:layout_height="194dp"
            android:layout_alignLeft="@+id/textView6"
            android:layout_alignStart="@+id/textView6"
            android:layout_below="@+id/textView6"
            android:columnWidth="93dp"
            android:numColumns="auto_fit"
            android:scrollingCache="true"
            android:background="@android:drawable/editbox_dropdown_dark_frame"
            tools:layout_editor_absoluteX="7dp"
            tools:layout_editor_absoluteY="284dp" />

        <ListView
            android:id="@+id/assignedTags"
            android:layout_width="170dp"
            android:layout_height="205dp"
            android:layout_alignLeft="@+id/textView5"
            android:layout_alignStart="@+id/textView5"
            android:layout_below="@+id/textView5"
            android:background="@android:drawable/editbox_dropdown_dark_frame"
            tools:layout_editor_absoluteX="7dp"
            tools:layout_editor_absoluteY="45dp" />

        <ImageView
            android:id="@+id/imgPrev"
            android:layout_width="157dp"
            android:layout_height="204dp"
            android:layout_alignBottom="@+id/assignedTags"
            android:layout_alignTop="@+id/textView5"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/load"
            tools:layout_editor_absoluteX="211dp"
            tools:layout_editor_absoluteY="45dp"
            android:layout_alignRight="@+id/tagsPool"
            android:layout_alignEnd="@+id/tagsPool" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
