<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_dark"
    tools:context="theappsnamegoeshere.apptest.testapp.camtag.FullScreenActivity">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="false"
        android:scaleType="fitCenter"
        android:visibility="visible"
        app:srcCompat="@drawable/preview" />

    <ImageButton
        android:id="@+id/shareButton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:alpha="0.65"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/share" />

    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="65dp"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:alpha="0.65"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/back" />

    <ImageButton
        android:id="@+id/nextButton"
        android:layout_width="65dp"
        android:layout_height="55dp"
        android:alpha="0.65"
        android:rotation="180"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/back"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:adjustViewBounds="false"
        android:alpha="0.65"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/edit"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/nextButton"
        android:layout_alignStart="@+id/nextButton" />

    <ImageButton
        android:id="@+id/deleteButton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:alpha="0.65"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/delete"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/imageButton2"
        android:layout_toStartOf="@+id/imageButton2" />

    <TextView
        android:id="@+id/tagsScroll"
        android:layout_width="200dp"
        android:alpha="0.65"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@android:drawable/editbox_dropdown_dark_frame"
        android:ellipsize="marquee"
        android:gravity="bottom|center"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true"
        android:text="OneTwoThreeFourFiveSixSevenEightNineTen"
        android:textColor="@android:color/background_light" />

</RelativeLayout>
